<body>
<h2>Student Info (Object Destructuring)</h2>
<div class="box" id="output"></div>
<script>
  const student = {
    name: "Aarav",
    age: 20,
    course: "B.Tech",
    city: "Hyderabad"
  };
  const { name, age, course, city } = student;
  document.getElementById("output").innerHTML = `
    <div class="result"><strong>Name:</strong> ${name}</div>
    <div class="result"><strong>Age:</strong> ${age}</div>
    <div class="result"><strong>Course:</strong> ${course}</div>
    <div class="result"><strong>City:</strong> ${city}</div>
  `;
</script>
</body>
